<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.admin.LichHoatDongActivity">

    <TextView
        android:drawableStart="@drawable/back_ic"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:layout_marginTop="10dp"
        android:id="@+id/tvBackLichHoatDong"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/background_tv1"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Lịch hoạt động ngày 09/12/2022 của sân A1"
        android:layout_marginStart="2dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="#FF9800"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Thời gian : 0h - 8h"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="#9C27B0"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Thời gian : 8h - 16h"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="#4CAF50"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Thời gian : 16h - 24h"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>